  <div class="sp_iss_cate_name_label">
    <%= form.label :category_name %>
  </div>
  <div class="sp_iss_cate_name_area">
    <%= form.text_field :category_name %>
  </div>
  <div class="sp_iss_cate_eyechatch_label">
    <%= form.label :image_name %>
