<ul class="special_issues-footer">
  <% if current_user && loyalty(@special_issue, :special_issues).index? %>
      <%= link_to "編集", [:edit, special_issue], class: "btn btn-outline-primary btn-sm" %>
      <% unless @special_issue_category.category_name == "イベントガイド" || @special_issue_category.category_name == "映画情報" %>
      <%= link_to "削除", special_issue, method: :delete,
            data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-primary btn-sm" %>
      <% end %>
  <% end %>
</ul>
