<% @page_title = "ツイートの新規作成" %>
<h1><%= @page_title %></h1>

<%= form_for @micropost do |form| %>
  <%= render "form", form: form %>
  <div><%= form.submit %></div>
  <div>
    <span class="picture">
      <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png, video/*' %>
    </span>
  </div>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 10) {
      alert('ファイルの最大サイズは10MBです。10MB以下にしてください');
    }
  });
</script>
