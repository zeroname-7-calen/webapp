<% @page_title = @user ? @user.email + "さんのツイート" : "読者のツイート" %>
<h1><%= @page_title %></h1>

<% if current_user %>
  <div class="toolbar"><%= link_to "ツイートの作成", :new_micropost %></div>
<% end %>

<% if @microposts.present? %>
  <% @microposts.each do |micropost| %>
    <p><%= micropost.content %></p>
    <%= render "footer", micropost: micropost %>
  <% end %>
  <%= paginate @microposts %>
<% else %>
  <p>ツイートはありません</p>
<% end %>
