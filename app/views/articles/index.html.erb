<% @page_title = "ニュース一覧" %>
<h1><%= @page_title %></h1>

<% if current_user %>
  <% if loyalty(@article, :articles).index? %>
    <div class="toolbar"><%= link_to "新規作成", :new_article %></div>
  <% end %>
<% end %>

<%= form_tag :search_articles, method: :get,class: "search" do %>
 <%= text_field_tag "q", params[:q] %>
  <div class="submit_tag">
    <%= submit_tag "検索" %>
  </div>
<% end %>

<% if @articles.present? %>
  <table class="list">
    <tbody>
      <% @articles.each do |article| %>
        <tr>

          <td><%= link_to article.title, article %></td>
          <td><%= article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
          <% if current_user %>
            <% if loyalty(@article, :articles).index? %>
              <td>
                <%= link_to "編集", [:edit, article ] %> |
                <%= link_to "削除", article, method: :delete,
                  data: { confirm: "本当に削除してもよろしいですか？" } %>
              </td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @articles %>
  <% else %>
    <p>ニュースがありません</p>
  <% end %>
