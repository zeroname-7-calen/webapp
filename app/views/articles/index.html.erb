<div class="container-fruid">
  <div class="row">
    <div class="col-lg-12">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <% @page_title = "ニュース一覧" %>
          <h4><%= @page_title %></h4>
        </div>
      </div>
    </div>
  </div>
</div>

<% if current_user %>
  <% if loyalty(@article, :articles).index? %>
    <div class="toolbar"><%= link_to "新規作成", :new_article, class: "btn btn-outline-dark btn-sm" %></div>
  <% end %>
<% end %>

<%= form_tag :search_articles, method: :get,class: "search" do %>
  <%= text_field_tag "q", params[:q], placeholder: " タイトル検索" %>
  <%= submit_tag "検索" %>
<% end %>
<% if @articles.present? %>
  <table class="table table-md table-striped table-condenced">
    <tbody>
      <% @articles.each do |article| %>
      <!-- <div class="article_footer"> -->
        <tr>
          <td class="strftime"><%= article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td class="indextitle"><%= link_to article.title, article %></td>

          <% if current_user && loyalty(@article, :articles).index? %>
          <div class="article_footer">
            <td class="article_edit_delete">
              <%= link_to "編集", [:edit, article ] %> |
              <%= link_to "削除", article, method: :delete,
                  data: { confirm: "本当に削除してもよろしいですか？" } %>
            </td>
          </div>
          <% end %>
        </tr>
        <!-- </div> -->
      <% end %>
    </tbody>
  </table>

  <div class="paginate">
    <%= paginate @articles %>
  </div>
  <% else %>
    <p>ニュースがありません</p>
  <% end %>
