<%= render "shared/errors", obj: @advertisement %>

<% @page_title = "広告データ新規登録" %>
<h5><%= @page_title %></h5>
<%= form_for @advertisement do |form| %>
<%= render "form", form: form %>
<div class="form_button"><%= form.submit value="広告を登録 "%></div>
<% end %>

<script type="text/javascript">
  $('#advertisement_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('ファイルの最大サイズは3MBです。3MB未満のファイル容量にしてください');
    }
  });
</script>
