<% @articles.each do |article| %>
  <h2><%= link_to article.title, article %></h2>
  <%= strip_tags(article.content.to_s).truncate(200) %>
    <%= link_to "もっと読む", article %>
<% end %>

<h1><%= link_to 'Append jpg', new_fileupload_url %></h1>
<% @img_path %>
<img src="http://127.0.0.1:3000/<%= @img_path %>" format: "jpeg">


<% if current_user %>
<div class="toolbar"><%= link_to "写真の送信", :new_fileupload %></div>
<% end %>
