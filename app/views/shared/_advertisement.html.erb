<div class="ad_tool_container">
  <% if current_user && loyalty(@advertisement, :advertisements).index? %>
    <div class="ad_tool">
      <h6><%= link_to "広告一覧確認", advertisements_path %></h6>
    </div>
  <% end %>
</div>

<div id="advertisement_box" class="carousel slide" data-ride="carousel" data-interval="5000">
  <div class="carousel-inner">
    <% @advertisements = Advertisement.order(created_at: :desc) %>
      <% if @advertisements.present? %>
        <div class="carousel-item active">
          <% @advertisements.first(1).each do |advertisement| %>
            <li><%= link_to image_tag(advertisement.picture.url), advertisement.image_url, target: :_blank, rel: "noopener noreferrer" if advertisement.picture? %></li>
          <% end %>
        </div>
        <% @advertisements.drop(1).each do |advertisement| %>
          <div class="carousel-item">
            <li><%= link_to image_tag(advertisement.picture.url), advertisement.image_url, target: :_blank, rel: "noopener noreferrer" if advertisement.picture? %></li>
          </div>
        <% end %>
      <% end %>
  </div>
  <a class="carousel-control-prev" href="#advertisement_box" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#advertisement_box" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
