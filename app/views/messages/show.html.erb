<div class="message_show_title">
  <% @page_title = "掲示板" %>
  <h4><%= @page_title %></h4>
</div>
<div class="message_show_content_title">
  <h5><%= @message.title %></h5>
</div>
<div class="message_show_content_body">
  <p><%= simple_format(@message.content) %></p>
</div>
<div class="message_show_media">
  <% if @message.picture? %>
    <% if @message.picture.file.content_type.include?('image/') %>
      <%= image_tag @message.picture.url(:thumb) %>
    <% else %>
      <%= video_tag @message.picture.url, width: "30%", height: "30%",
                    controls: true, autobuffer: true %>
    <% end %>
  <% end %>
</div>
<div class="message_show_toolbar">
  <%= render "footer", message: @message %>
</div>
