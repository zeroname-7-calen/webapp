<% @page_title = "掲示板新規作成" %>
<h5><%= @page_title %></h5>

<%= form_for @message do |form| %>
  <%= render "form", form: form %>
  <div class="form">
    <%= form.submit "登録する", class: "btn btn-primary" %>
  </div>
  <div>
    <span class="picture">
      <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png, video/*' %>
    </span>
  </div>
<% end %>
