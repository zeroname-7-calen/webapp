<% @page_title = "掲示板" %>
<h1><%= @page_title %></h1>

<% if current_user %>
  <div class="toolbar"><%= link_to "掲示板掲載", new_message_path %></div>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |message| %>
  <h2><%= message.title %></h2>
    <p><%= message.content %></p>
  <%= render "footer", message: message %>
  <% end %>
  <%= paginate @messages %>
<% else %>
  <p>掲載はありません</p>
<% end %>
