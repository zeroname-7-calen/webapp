<h5>パスワードを忘れてしまったら…</h5>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <dd><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム" %></dd>
</div>
<div class="field">
  <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %></dd>
</div>
<div class="actions">
  <%= f.submit "パスワードリセット用メールを送る", class: "btn btn-info" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
